<body>
  <h1>✨ Sitla Treasure Hunt: Clue 2 ✨</h1>
  <p>Enter your team name to receive your clue and next location:</p>

  <input type="text" id="teamName" placeholder="Enter team name exactly">
  <button onclick="getClue()">Submit</button>

  <div class="output" id="output"></div>

  <script>
    function getClue() {
      const team = document.getElementById("teamName").value.trim().toLowerCase();
      const output = document.getElementById("output");

      const clues = {
        "team mustard missile": {
          clue: "Pose like Simran about to miss her train. Bonus points for a flying dupatta.",
          next: "Big Tree / Breakfast Area"
        },
        "team rawmance": {
          clue: "Your next mission is classified. Find where the books hold more secrets than RAW files.",
          next: "Library"
        },
        "team zoom-in zoom-out": {
          clue: "Karan Johar wants your best dramatic walk. Bonus points if someone fake-cries.",
          next: "Dining Area"
        },
        "team what was that?": {
          clue: "Poo would never enter through the main gate. But maybe you should.",
          next: "Entrance Gate"
        },
        "team tax-free cricket": {
          clue: "Lagaan was won in the shade. Head to the tree that could be your lucky toss.",
          next: "Big Tree / Breakfast Area"
        }
      };

      if (clues[team]) {
        output.innerHTML = `<strong>Clue:</strong> ${clues[team].clue}<br><br><strong>Next Location:</strong> ${clues[team].next}`;
      } else {
        output.innerHTML = "<em>Team name not recognized. Please enter your exact team name as given.</em>";
      }
    }
  </script>
